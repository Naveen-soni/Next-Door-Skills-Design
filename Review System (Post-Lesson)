    <style>
        :root {
            --brand-bg: #F8F7F4;
            --brand-card-bg: #FFFFFF;
            --brand-primary: #D97757; /* Terracotta */
            --brand-secondary: #3A4F41; /* Forest Green */
            --brand-text: #3D3D3D;
            --brand-text-muted: #8A8A8A;
            --brand-border: #EAE9E5;
            --brand-gold: #FFD700; /* Star color */
        }

        body {
            font-family: 'Inter', sans-serif;
            background-color: var(--brand-bg);
            color: var(--brand-text);
        }

        /* --- Custom Animations & Styles --- */
        .star {
            transition: transform 0.2s cubic-bezier(0.34, 1.56, 0.64, 1), color 0.2s ease;
            cursor: pointer;
        }
        .star:hover {
            transform: scale(1.2);
        }
        .star.selected {
            color: var(--brand-gold);
            transform: scale(1.1);
        }

        @keyframes sparkle {
            0% { transform: scale(1); opacity: 0.5; }
            50% { transform: scale(1.5); opacity: 1; }
            100% { transform: scale(1); opacity: 0.5; }
        }
        .star.sparkle {
            animation: sparkle 0.4s ease-in-out;
        }

        .success-overlay {
            transition: opacity 0.4s ease-in-out;
        }

        .confetti {
            position: absolute;
            width: 10px;
            height: 10px;
            opacity: 0;
            animation: confetti-fall 2.5s ease-out forwards;
        }
        @keyframes confetti-fall {
            0% { transform: translateY(0) rotate(0deg); opacity: 1; }
            100% { transform: translateY(100vh) rotate(1080deg); opacity: 0; }
        }
    </style>
    
